{% extends 'base.html.twig' %}

{% block title %}Mon compte - myPokedex{% endblock %}

{% block stylesheets %}
<link rel="stylesheet" href="{{ asset('css/pokemon_main.css') }}">
{% endblock %}

{% block body %}

<div class="top-container">
    <h1>Bonjour, <span>{{app.user.username}}</span></h1>
    <div class="container-header">
        <a class="btn btn-modify btn-outline-primary" href="">Modifier votre profil</a>
        <a class="btn btn-add btn-outline-primary" href="">Ajouter d'autres Pokémon</a>
    </div>
</div>
{% if pokemons %}
{# <div class="dropdown">
    <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        Trier par
    </a>

    <div class="dropdown-menu sortable" aria-labelledby="dropdownMenuLink">
        <a class="dropdown-item" href="#">Type</a>
    </div>
</div> #}
<div class="container">
    {% for pokemon in app.user.pokemons %}
    <div class="card" style="width: 12rem;">
        <img class="img" src="{{asset('img/' ~ pokemon.number ~ '.png')}}" class="card-img-top" alt="Photo de {{pokemon.name}}">
        <div class="card-body">
            <a href="#" class="btn btn-primary">{{pokemon.name}}</a>
            <a href="{{path('pokemon_remove', { 'id': pokemon.id }) }}" class="fa fa-minus-square-o fa-2x add-button"></a>
        </div>
    </div>
    {% endfor %}
    {# <div class="pagination">
        {{ knp_pagination_render(pokemons) }}
    </div> #}
</div>
{% else %}
<div class="container">
    <p class="no-pokemon">Vous n'avez pas encore de pokémon dans votre pokédex. Rendez-vous sur la page <a href="{{path('pokemon_main')}}">Pokemon</a> pour débuter votre pokedex.</p>
</div>
{% endif %}

{% endblock %}
