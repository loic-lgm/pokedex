{% extends 'base.html.twig' %}

{% block stylesheets %}
<link rel="stylesheet" href="{{ asset('css/login.css') }}">
{% endblock %}

{% block title %}Connexion - myPokedex{% endblock %}

{% block body %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            Vous êtes connectés en tant que {{ app.user.username }}, <a href="{{ path('app_logout') }}">Déconnexion</a>
        </div>
    {% endif %}
    <div class="container">
        <h1 class="h3 mb-3 font-weight-normal">Connectez-vous</h1>
        <div class="container-email">
            <div class="email-logo fa fa-at  fa-lg"></div>
            <input placeholder="Votre email" type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
        </div>
        <div class="container-password">
            <div class="password-logo fa fa-lock  fa-lg"></div>
            <input placeholder="Votre mot de passe" type="password" name="password" id="inputPassword" class="form-control" required>
        </div>

        <input type="hidden" name="_csrf_token"
            value="{{ csrf_token('authenticate') }}"
        >

        
            {# Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html #}

            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me"> Rester connecté
                </label>
            </div>
       

        <button class="btn btn-lg btn-primary" type="submit">
            Connexion
        </button>
    </div>
</form>
{% endblock %}
